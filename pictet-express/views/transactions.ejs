<script>
function formatPercent(val) {
    let num = parseFloat(val.replace(/[^0-9.-]/g, ''));
    if (isNaN(num)) return val;
    return (num > 0 ? '' : '-') + Math.abs(num).toFixed(2) + '%';
}

function sortTransactions(type, colIdx) {
    const list = document.querySelector(`#${type} .transaction-list`);
    const header = list.querySelector('.transaction-header');
    const rows = Array.from(list.querySelectorAll('.transaction-row:not(.transaction-header)'));
    let getValue = (row) => row.children[colIdx].innerText.trim();
    let isNumeric = colIdx === 1 || colIdx === 2 || colIdx === 3;
    let isPercent = colIdx === 2;
    let isStatus = colIdx === 4;
    let statusOrder = { 'Active': 1, 'Pending': 2, 'Closed': 3 };
    rows.sort((a, b) => {
        let va = getValue(a), vb = getValue(b);
        if (isNumeric) {
            va = parseFloat(va.replace(/[^\d.-]/g, ''));
            vb = parseFloat(vb.replace(/[^\d.-]/g, ''));
            return va - vb;
        } else if (isStatus) {
            return statusOrder[va] - statusOrder[vb];
        } else {
            return va.localeCompare(vb);
        }
    });
    // Toggle sort direction
    if (list.getAttribute('data-sorted') == colIdx) {
        rows.reverse();
        list.setAttribute('data-sorted', '');
    } else {
        list.setAttribute('data-sorted', colIdx);
    }
    // Remove all children
    while (list.firstChild) list.removeChild(list.firstChild);
    // Re-add header and sorted rows
    list.appendChild(header);
    rows.forEach(row => {
        // Format percent column
        if (row.children[2]) {
            row.children[2].innerText = formatPercent(row.children[2].innerText);
        }
        list.appendChild(row);
    });
}

// Highlight negative percentages in red
window.addEventListener('DOMContentLoaded', function() {
    // Only format the Premium/(Discount) column (4th column, nth-child(4)) as percent
    document.querySelectorAll('.transaction-row:not(.transaction-header) span:nth-child(4)').forEach(span => {
        let num = parseFloat(span.innerText.replace(/[^0-9.-]/g, ''));
        if (!isNaN(num) && num < 0) {
            span.classList.add('negative-percent');
        } else {
            span.classList.remove('negative-percent');
        }
        span.innerText = formatPercent(span.innerText);
    });
});

function toggleOffers(row) {
    const card = row.parentElement;
    const subcontainer = card.querySelector('.offer-subcontainer');
    const chevron = row.querySelector('.chevron');
    if (subcontainer.style.display === 'none') {
        subcontainer.style.display = 'block';
        chevron.innerHTML = '&#9660;'; // ▼
    } else {
        subcontainer.style.display = 'none';
        chevron.innerHTML = '&#9654;'; // ▶
    }
}

function showTab(tabId, event) {
    // Hide all tab contents
    document.querySelectorAll('.tab-content').forEach(content => {
        content.classList.remove('active');
    });
    // Deactivate all tabs
    document.querySelectorAll('.tab').forEach(tab => {
        tab.classList.remove('active');
    });
    // Show selected tab content
    document.getElementById(tabId).classList.add('active');
    // Activate selected tab
    if (event && event.target) {
        event.target.classList.add('active');
    } else {
        document.querySelector(`.tab[onclick*=\"showTab('${tabId}'\"]`).classList.add('active');
    }
}
