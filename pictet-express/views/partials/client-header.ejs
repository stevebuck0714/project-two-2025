<script>
// This script populates the client name in the header
document.addEventListener('DOMContentLoaded', function() {
    const clientName = localStorage.getItem('clientName');
    const clientNameElement = document.getElementById('selected-client-name-header');
    if (clientName && clientNameElement) {
        clientNameElement.textContent = clientName;
        clientNameElement.style.display = 'block';
    } else if (clientNameElement) {
        clientNameElement.style.display = 'none';
    }
});
</script> 