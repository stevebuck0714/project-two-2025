<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LOMBARD ODIER Express</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <header class="header">
        <div class="header-content">
            <a href="/" class="logo">
                <img src="/images/lombard-odier.jpg" alt="LOMBARD ODIER Logo" class="logo-image">
            </a>
            <nav class="main-nav">
                <% if (typeof user !== 'undefined' && user && user.type === 'banker') { %>
                    <a href="/client-alerts" class="nav-link <%= (typeof path !== 'undefined' && path.includes('/client-alerts')) ? 'active' : '' %>">Client Alerts</a>
                <% } %>
                <a href="/briefing" class="nav-link <%= (typeof path !== 'undefined' && path.includes('/briefing')) ? 'active' : '' %>">Briefing</a>
                <a href="/portfolio-summary" class="nav-link <%= (typeof path !== 'undefined' && (path.includes('/portfolio-summary') || path.includes('/investment-details'))) ? 'active' : '' %>">Portfolio</a>
                <a href="/portfolio-builder" class="nav-link <%= (typeof path !== 'undefined' && path.includes('/portfolio-builder')) ? 'active' : '' %>">Portfolio Builder</a>
                <a href="/investment-opportunities" class="nav-link <%= (typeof path !== 'undefined' && (path.includes('/investment-opportunities') || path.includes('/fund-details') || path.includes('/create-bid') || path.includes('/contact-advisor') || path.includes('/transactions'))) ? 'active' : '' %>">Bulletin Board</a>
                <a href="/messages" class="nav-link <%= (typeof path !== 'undefined' && path.includes('/messages')) ? 'active' : '' %>">Messages</a>
                <a href="/support" class="nav-link <%= (typeof path !== 'undefined' && path.includes('/support')) ? 'active' : '' %>">Support</a>
            </nav>
            <nav class="nav-menu">
                <a href="/logout" class="login-link">LOGOUT</a>
            </nav>
        </div>
    </header>
    <main>
</body>
</html> 