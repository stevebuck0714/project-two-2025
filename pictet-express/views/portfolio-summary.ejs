    });

    // Calculate total values for each asset type
    const totalValue = <%= processedData.metrics.totalValue %>;
    const assetValues = {};
    Object.keys(assetAllocation).forEach(assetType => {
        assetValues[assetType] = (assetAllocation[assetType] / 100) * totalValue;
