                    var meta = chart.getDatasetMeta(0);
                    var arc = meta.data[i];
                    var centerX = (arc.x + arc.x) / 2;
                    var centerY = (arc.y + arc.y) / 2;
                    ctx.fillText(value + '%', centerX, centerY);
                });
                ctx.restore();
            }
