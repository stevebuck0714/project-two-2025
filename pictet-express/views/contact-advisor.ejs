<%- include('partials/header') %>
<%- include('partials/secondary-nav') %>

<div class="main-container">
    <div class="contact-advisor-container">
        <div class="advisor-contact-form email-type-<%= emailType %>">
            <div class="form-header">
                <% if (emailType === 'generic') { %>
                    <h2>Contact My Advisor</h2>
                    <p class="email-type-badge badge-generic">General Inquiry</p>
                <% } else if (emailType === 'express-interest') { %>
                    <h2>Express Interest</h2>
                    <p class="email-type-badge badge-express">Investment Inquiry</p>
                <% } else if (emailType === 'specific') { %>
                    <h2>Send Message to Advisor</h2>
                    <p class="email-type-badge badge-specific">Specific Request</p>
                <% } %>
            </div>

            <form id="advisorContactForm" class="advisor-form">
                <input type="hidden" id="email-type" name="email-type" value="<%= emailType %>">
                
                <!-- Context Information (for express-interest and specific types) -->
                <% if (contextData && (contextData.fundName || contextData.listingId)) { %>
                <div class="form-section">
                    <h3>Investment Details</h3>
                    <div class="fund-summary-box">
                        <% if (contextData.fundName) { %>
                        <div class="fund-info-row">
                            <span class="label">Investment:</span>
                            <span class="value"><%= contextData.fundName %></span>
                        </div>
                        <% } %>
                        <% if (contextData.listingId) { %>
                        <div class="fund-info-row">
                            <span class="label">Listing ID:</span>
                            <span class="value"><%= contextData.listingId %></span>
                        </div>
                        <% } %>
                    </div>
                </div>
                <% } %>

                <div class="form-section">
                    <h3>Your Contact Information</h3>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="client-name">Your Name</label>
                            <input type="text" id="client-name" name="client-name" value="<%= typeof user !== 'undefined' && user ? user.name : '' %>" readonly style="background-color: #f5f5f5;">
                        </div>
                        <div class="form-group">
                            <label for="client-email">Your Email</label>
                            <input type="email" id="client-email" name="client-email" value="<%= typeof user !== 'undefined' && user ? user.username + '@email.com' : '' %>" readonly style="background-color: #f5f5f5;">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="client-phone">Your Phone</label>
                        <input type="tel" id="client-phone" name="client-phone" value="+41 22 555 0000" readonly style="background-color: #f5f5f5;">
                    </div>
                </div>

                <div class="form-section">
                    <h3>Your Advisor Information</h3>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="advisor-name">Advisor Name</label>
                            <input type="text" id="advisor-name" name="advisor-name" value="<%= typeof user !== 'undefined' && user && user.banker ? user.banker : 'Alexandra Steinberg - Senior Private Banker' %>" readonly style="background-color: #f5f5f5;">
                        </div>
                        <div class="form-group">
                            <label for="advisor-email">Advisor Email</label>
                            <input type="email" id="advisor-email" name="advisor-email" value="alexandra.steinberg@ubs.com" readonly style="background-color: #f5f5f5;">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="advisor-phone">Advisor Phone</label>
                        <input type="tel" id="advisor-phone" name="advisor-phone" value="+41 44 234 5678" readonly style="background-color: #f5f5f5;">
                    </div>
                </div>

                <div class="form-section">
                    <h3>Subject <% if (emailType === 'generic') { %>*<% } %></h3>
                    <div class="form-group">
                        <input type="text" id="email-subject" name="email-subject" 
                               value="<%= subject %>" 
                               placeholder="<%= emailType === 'generic' ? 'Enter email subject...' : 'Subject line' %>" 
                               <%= emailType === 'generic' ? 'required' : '' %>
                               <%= emailType === 'specific' ? 'readonly style="background-color: #f5f5f5;"' : '' %>
                               style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px; font-size: 14px;">
                    </div>
                </div>

                <div class="form-section">
                    <h3>Message *</h3>
                    <div class="form-group">
                        <textarea id="client-message" name="client-message" rows="12" 
                                  placeholder="<%= emailType === 'generic' ? 'Type your message here...' : 'Review and edit message as needed...' %>" 
                                  required 
                                  style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px; font-size: 14px; font-family: inherit;"><%= messageBody %></textarea>
                    </div>
                    <% if (emailType === 'express-interest') { %>
                    <p class="helper-text">You can edit the message above to add your specific questions or additional context.</p>
                    <% } else if (emailType === 'specific') { %>
                    <p class="helper-text">Review the message above. You may add additional notes at the end if needed.</p>
                    <% } %>
                </div>

                <div class="form-actions">
                    <button type="button" class="btn btn-secondary" onclick="window.history.back()">Back</button>
                    <button type="submit" class="btn btn-primary btn-email-<%= emailType %>">Send Message</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
.contact-advisor-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 1rem;
}

.advisor-contact-form {
    background: #fff;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    padding: 1.5rem;
}

.form-header {
    text-align: center;
    margin-bottom: 1.5rem;
    padding-bottom: 0.75rem;
    border-bottom: 2px solid #e60012;
}

.form-header h2 {
    color: #333;
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
}

.email-type-badge {
    display: inline-block;
    padding: 0.4rem 1rem;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 600;
    color: white;
    margin-top: 0.5rem;
}

.badge-generic {
    background: #1a5f7a;
}

.badge-express {
    background: #d97706;
}

.badge-specific {
    background: #059669;
}

.form-section {
    margin-bottom: 1.25rem;
}

.form-section h3 {
    color: #e60012;
    font-size: 1.1rem;
    margin-bottom: 0.75rem;
    padding-bottom: 0.4rem;
    border-bottom: 1px solid #eee;
}

.fund-summary-box {
    background: #f8fafc;
    border: 1px solid #e0e6ed;
    border-radius: 6px;
    padding: 1rem;
    margin-bottom: 0.75rem;
}

.fund-info-row {
    display: flex;
    justify-content: space-between;
    margin-bottom: 0.4rem;
    padding: 0.3rem 0;
    border-bottom: 1px solid #eee;
}

.fund-info-row:last-child {
    border-bottom: none;
    margin-bottom: 0;
}

.fund-info-row .label {
    font-weight: 600;
    color: #333;
}

.fund-info-row .value {
    color: #666;
    font-weight: 500;
}

.form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
}

.form-group {
    margin-bottom: 0.75rem;
}

.form-group label {
    display: block;
    font-weight: 600;
    color: #333;
    margin-bottom: 0.4rem;
    font-size: 0.95rem;
}

.form-group input,
.form-group textarea {
    width: 100%;
    padding: 0.6rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 0.95rem;
    transition: border-color 0.2s;
}

.form-group input:focus,
.form-group textarea:focus {
    outline: none;
    border-color: #e60012;
    box-shadow: 0 0 0 2px rgba(230, 0, 18, 0.1);
}

.helper-text {
    font-size: 0.85rem;
    color: #666;
    font-style: italic;
    margin-top: 0.5rem;
}

.form-actions {
    display: flex;
    gap: 0.75rem;
    justify-content: center;
    margin-top: 1.25rem;
    padding-top: 0.75rem;
    border-top: 1px solid #eee;
}

.btn {
    padding: 0.6rem 1.5rem;
    border: none;
    border-radius: 4px;
    font-size: 0.95rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s;
    text-decoration: none;
    display: inline-block;
    text-align: center;
}

.btn-primary {
    background: #e60012;
    color: white;
}

.btn-primary:hover {
    background: #cc0010;
    transform: translateY(-1px);
}

/* Email type specific button colors */
.btn-email-generic {
    background: #1a5f7a !important;
}

.btn-email-generic:hover {
    background: #154c5d !important;
}

.btn-email-express-interest {
    background: #d97706 !important;
}

.btn-email-express-interest:hover {
    background: #b45309 !important;
}

.btn-email-specific {
    background: #059669 !important;
}

.btn-email-specific:hover {
    background: #047857 !important;
}

.btn-secondary {
    background: #f8f9fa;
    color: #333;
    border: 1px solid #ddd;
}

.btn-secondary:hover {
    background: #e9ecef;
}

@media (max-width: 768px) {
    .contact-advisor-container {
        padding: 1rem;
    }
    
    .form-row {
        grid-template-columns: 1fr;
    }
    
    .form-actions {
        flex-direction: column;
    }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Auto-populate advisor information from header
    const bankerNameElement = document.getElementById('private-banker-name');
    if (bankerNameElement) {
        const bankerName = bankerNameElement.textContent.trim();
        if (bankerName && bankerName !== 'Private Banker Name') {
            document.getElementById('advisor-name').value = bankerName;
            
            // Generate email based on name
            const emailName = bankerName.toLowerCase().replace(/\s+/g, '.');
            document.getElementById('advisor-email').value = `${emailName}@ubs.com`;
        }
    }
});

document.getElementById('advisorContactForm').addEventListener('submit', function(e) {
    e.preventDefault();
    
    // Get form data
    const formData = new FormData(this);
    const data = Object.fromEntries(formData);
    
    // Simple validation
    if (!data['advisor-name'] || !data['advisor-email'] || !data['client-name'] || !data['client-email']) {
        alert('Please fill in all required fields.');
        return;
    }
    
    if (!data['email-subject'] || !data['client-message']) {
        alert('Please fill in the subject and message fields.');
        return;
    }
    
    // Get email type
    const emailType = document.getElementById('email-type').value;
    
    // Send message to advisor API to generate confirmation
    fetch('/api/contact-advisor', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({
            emailType: emailType,
            subject: data['email-subject'],
            message: data['client-message'],
            clientName: data['client-name'],
            clientEmail: data['client-email'],
            advisorName: data['advisor-name'],
            advisorEmail: data['advisor-email']
        })
    })
    .then(response => response.json())
    .then(result => {
        if (result.success) {
            alert('Your message has been sent to your advisor successfully! Check your Messages inbox for their response.');
            window.location.href = '/messages';
        } else {
            alert('Failed to send message. Please try again.');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('Failed to send message. Please try again.');
    });
});
</script>

<%- include('partials/footer') %>
