.fund-metrics th:nth-child(6), .fund-metrics td:nth-child(6) { width: 16.66%; }

.fund-action {
    margin-top: 1rem;
    text-align: right;
    display: flex;
    gap: 1rem;
    align-items: center;
}

.btn {
    display: inline-block;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 500;
