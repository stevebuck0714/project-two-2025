    height: 40px;
    flex-shrink: 0;
    margin: 0 !important;
    padding: 0 !important;
}

.logo-image {
    width: 100%;
    height: 100%;
    object-fit: contain;
}

.fund-title {
    font-size: 1.1rem;
    font-weight: 500;
    margin: 0 !important;
    padding: 0 !important;
    line-height: 1.2;
}

.posted-date {
    margin-left: auto;
    color: #666;
    font-size: 0.9rem;
    margin: 0 !important;
    padding: 0 !important;
}

.table-container {
    margin-top: 0.5rem;
}

.fund-details,
.fund-metrics {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 0.5rem;
    font-size: 0.9rem;
    table-layout: fixed;
}

.fund-details th,
.fund-metrics th {
    background-color: #f8f9fa;
    text-align: center;
    padding: 10px 8px;
    font-weight: bold !important;
    color: #333;
    line-height: 1.2;
    margin: 0;
    font-size: 0.85rem;
    border-bottom: 2px solid #dee2e6;
}

.fund-details td,
.fund-metrics td {
    padding: 8px;
    text-align: center;
    border-bottom: 1px solid #eee;
    font-size: 0.85rem;
}

/* Create unified 6-column layout for both tables */
