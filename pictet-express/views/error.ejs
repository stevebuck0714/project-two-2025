<%- include('partials/header') %>
<%- include('partials/secondary-nav') %>
<%- include('partials/client-header') %>

<div class="main-container">
    <div class="error-container">
        <h1>Error</h1>
        <div class="error-message">
            <h2><%= error %></h2>
            <% if (typeof message !== 'undefined') { %>
                <p><%= message %></p>
            <% } %>
        </div>
        <div class="error-actions">
            <a href="/portfolio-summary" class="btn primary">Back to Portfolio Summary</a>
            <a href="/" class="btn secondary">Home</a>
        </div>
    </div>
</div>

<style>
.error-container {
    text-align: center;
    padding: 2rem;
    max-width: 600px;
    margin: 0 auto;
}

.error-message {
    background: #fee;
    border: 1px solid #fcc;
    padding: 1.5rem;
    border-radius: 8px;
    margin: 2rem 0;
}

.error-message h2 {
    color: #c33;
    margin: 0 0 1rem 0;
}

.error-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-top: 2rem;
}

.btn {
    padding: 0.75rem 1.5rem;
    text-decoration: none;
    border-radius: 6px;
    font-weight: 600;
}

.btn.primary {
    background: #003f5c;
    color: white;
}

.btn.secondary {
    background: #f5f5f5;
    color: #333;
    border: 1px solid #ddd;
}
</style>

<%- include('partials/footer') %>


